doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{docTitle}
    link(rel="stylesheet", href="/css/main.css")
  body
    header.main-header
      h1.header-title Shop
      nav
        a.nav-link(href="/") Shop
        a.nav-link(href="admin/add-product") Add Product
    main
     each product in prods
      article.card.product-item
       header.card__header
        h1.product__title #{product.name}
